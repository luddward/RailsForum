.panel.panel-primary
  .panel-heading
    %h3.panel-title
      General Discussion

  .panel-body
    - @posts.each do |post|
      .panel.panel-default
        .panel-heading
          %h3.panel-title= link_to post.title, post

        .panel-body
          %small
            Created
            = time_ago_in_words(post.created_at)
            ago
            by
            = post.user.username