.page-header
  %h1
    Furious Legion
    %small Forum
%table.table.table-hover
  %thead
    %tr
      %th Category
      %th Topics
      %th Posts
      %th Latest
  %tbody
    - @categories.each do |category|
      %tr
        %th
          = link_to category.name, category_path(category)
        %th
          = category.posts.count
        %th
          = 100 + 10
        %th
          - if category.posts.count > 0
            - @post = category.posts.last
            = link_to @post.title, post_path(@post)
            %p
              by
              = @post.user.username

