.page-header
  %h1
    = AppConstants::APP_NAME
    %small Dashboard

-if user_signed_in?

  - if current_user.admin?
    = render :partial => 'home/adminbar'

  = render :partial => 'home/userbar'

.row
  .col-md-8
    .panel.panel-default
      .panel-heading
        %h3.panel-title Announcements

      - @articles = Article.all.order('created_at DESC').limit(5)
      .panel-body
        - @articles.each do |article|
          %h2= article.title
          %p= article.content
          %small
            = time_ago_in_words(article.created_at)
            ago
          %hr

  .col-md-4
    = render :partial => 'home/recent_posts'
    = render :partial => 'home/latest_users'

    .panel.panel-default
      .panel-heading
        %h3.panel-title Chat

      .panel-body
        hii

      .panel-footer
        .input-group
          %input#btn-input.form-control.input-sm{:type=>'text', :required => true, :placeholder => 'Type your message here'}
          %span.input-group-btn
            %btn.btn.btn-warning.btn-sm Send

