.page-header
  %h1
    = AppConstants::APP_NAME
    %small Dashboard

-if user_signed_in?
  = render :partial => 'home/adminbar'
  = render :partial => 'home/userbar'
- else
  .alert.alert-warning
    %button.close{ :data => { :dismiss => "alert" } } &times;
    To gain access to the full site, please
    = link_to 'Login', new_user_session_path
    or
    = link_to 'Register', new_user_registration_path

.row
  .col-md-8
    .panel.panel-default
      .panel-heading
        %h3.panel-title Announcements

      .panel-body
        %h2 Beta out now!
        %p sdadadasdasdasdsa

        %hr

        %h2 Alpha released!
        %p sdasdasdas

  .col-md-4
    = render :partial => 'home/recent_posts'
    = render :partial => 'home/latest_users'

    .panel.panel-default
      .panel-heading
        %h3.panel-title Chat

      .panel-body
        hii

      .panel-footer
        .input-group
          %input#btn-input.form-control.input-sm{:type=>'text', :required => true, :placeholder => 'Type your message here'}
          %span.input-group-btn
            %btn.btn.btn-warning.btn-sm Send

